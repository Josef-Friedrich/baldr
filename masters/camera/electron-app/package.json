{
  "name": "@bldr/camera-electron-app",
  "description": "A fullscreen electron app to display the video output from document cameras.",
  "version": "0.0.6",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:Josef-Friedrich/baldr-document-camera.git"
  },
  "scripts": {
    "build": "electron-packager ./ --out=dist --app-version=$npm_package_version --prune --asar --overwrite --arch=x64 --icon=./icon.icns",
    "doc": "jsdoc --configure ./docs/jsdoc-config.json --destination ./docs/ .",
    "electron-rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "start": "electron .",
    "test": "mocha"
  },
  "author": {
    "name": "Josef Friedrich",
    "email": "josef@friedrich.rocks",
    "url": "https://josef.friedrich.rocks"
  },
  "license": "MIT",
  "homepage": "https://github.com/Josef-Friedrich/baldr-document-camera",
  "devDependencies": {
    "@bldr/test-helper": "^0.0.2",
    "electron": "^1.7.9",
    "electron-packager": "^9.1.0",
    "electron-rebuild": "^1.6.0",
    "jsdoc": "^3.5.5",
    "mocha": "^4.0.1",
    "mocha-jshint": "^2.3.1",
    "spectron": "^3.7.2"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ],
    "ignore": [
      "docs"
    ]
  },
