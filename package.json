{
  "name": "baldr-sbook",
  "productName": "BALDUR Songbook",
  "description": "A fullscreen electron app to display songs in a class room using a projector.",
  "version": "0.0.2",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:JosefFriedrich-nodejs/baldr-sbook.git"
  },
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-rebuild",
    "electron-rebuild": "electron-rebuild",
    "build": "electron-packager . --out=dist --app-version=$npm_package_version --prune --asar --overwrite --arch=x64 --icon=./icon.icns"
  },
  "author": {
    "name": "Josef Friedrich",
    "email": "josef@friedrich.rocks",
    "url": "https://josef.friedrich.rocks"
  },
  "license": "MIT",
  "homepage": "https://github.com/JosefFriedrich-nodejs/baldr-sbook",
  "dependencies": {
    "mousetrap": "*",
    "jquery": "*",
    "selectize": "*"
  },
  "devDependencies": {
    "electron": "*",
    "electron-packager": "*",
    "electron-rebuild": "*"
  }
}
