{
  "name": "baldr-songbook",
  "productName": "baldr-songbook",
  "description": "A fullscreen electron app to display songs in a class room using a projector.",
  "version": "0.0.5",
  "main": "src/electron-main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:Josef-Friedrich/baldr-songbook.git"
  },
  "scripts": {
    "build": "./node_modules/.bin/electron-packager . --out=dist --app-version=$npm_package_version --asar --prune --overwrite --arch=x64 --icon=./icon.icns",
    "doc": "rm -f docs/*.html; jsdoc --configure ./docs/jsdoc-config.json --destination ./docs/ src/",
    "doc-show": "xdg-open ./docs/index.html",
    "electron-rebuild": "./node_modules/.bin/electron-rebuild",
    "postinstall": "./node_modules/.bin/electron-rebuild",
    "start": "./node_modules/.bin/electron .",
    "test": "./node_modules/.bin/mocha --reporter spec",
    "standard": "./node_modules/.bin/standard *.js src/*.js"
  },
  "author": {
    "name": "Josef Friedrich",
    "email": "josef@friedrich.rocks",
    "url": "https://josef.friedrich.rocks"
  },
  "license": "MIT",
  "homepage": "https://github.com/Josef-Friedrich/baldr-songbook",
  "dependencies": {
    "better-sqlite3": "^5.2.0",
    "colors": "^1.1.2",
    "commander": "^2.11.0",
    "font-awesome": "^4.7.0",
    "fs-extra": "^4.0.2",
    "glob": "^7.1.3",
    "jquery": "^3.2.1",
    "js-yaml": "^3.10.0",
    "mousetrap": "^1.6.1",
    "selectize": "^0.12.4"
  },
  "devDependencies": {
    "electron-packager": "^9.1.0",
    "electron-rebuild": "^1.6.0",
    "electron": "^3.0.13",
    "jsdoc": "^3.5.5",
    "mocha-standard": "^1.0.0",
    "mocha": "^4.0.1",
    "rewire": "^4.0.1",
    "sinon": "^4.0.0",
    "spectron": "^3.7.2",
    "standard": "^12.0.1",
    "tmp": "0.0.33"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  },
  "bin": {
    "baldr-songbook-updater": "./src/cli.js"
  }
}
