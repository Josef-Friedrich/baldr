{
  "name": "baldr",
  "version": "0.0.1",
  "description": "Presentation software",
  "main": "main.js",
  "scripts": {
    "dist": "electron-builder",
    "doc-show": "xdg-open ./docs/index.html",
    "doc": "jsdoc --destination ./docs/ .",
    "pack": "electron-builder --dir",
    "start": "electron .",
    "test": "mocha 'test/*.js' 'masters/quote/test/*.js' 'masters/person/test/*.js'"
  },
  "build": {
    "appId": "rocks.friedrich.baldr",
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg"
    },
    "linux": {
      "target": [
        "deb"
      ]
    },
    "fileAssociations": [
      {
        "ext": "baldr",
        "name": "BALDR Presentation Software",
        "description": "File format of the BALDR Presentation Software",
        "icon": "icon.icns",
        "role": "Viewer"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JosefFriedrich-nodejs/baldr.git"
  },
  "author": {
    "name": "Josef Friedrich",
    "email": "josef@friedrich.rocks"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JosefFriedrich-nodejs/baldr/issues"
  },
  "homepage": "https://github.com/JosefFriedrich-nodejs/baldr#readme",
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^19.37.2",
    "jsdoc": "^3.5.5",
    "jsdom": "^11.3.0",
    "jshint": "^2.9.5",
    "mocha": "^4.0.1",
    "mocha-jshint": "^2.3.1",
    "rewire": "^2.5.2",
    "spectron": "^3.7.2"
  },
  "dependencies": {
    "7zip-bin-linux": "^1.1.0",
    "baldr-audio": "file:./masters/audio",
    "baldr-person": "file:./masters/person",
    "baldr-question": "file:masters/question",
    "baldr-quote": "file:./masters/quote",
    "baldr-svg": "file:./masters/svg",
    "font-awesome": "^4.7.0",
    "js-yaml": "^3.10.0",
    "mousetrap": "^1.6.1",
    "pug": "^2.0.0-rc.4",
    "typeface-alegreya": "^0.0.40",
    "typeface-alegreya-sans": "^0.0.40",
    "typeface-alegreya-sans-sc": "^0.0.40",
    "typeface-alegreya-sc": "^0.0.40"
  }
}
