{
  "name": "baldr",
  "version": "0.1.0",
  "description": "A try to write my presentations for school in HTML5, CSS3 and Javascript using Electron. Virtual top level package for tooling support.",
  "scripts": {
    "build": "electron-builder",
    "doc-show": "xdg-open ./docs/index.html",
    "doc": "rm -f docs/*.html; jsdoc --configure ./docs/jsdoc-config.json --readme API.md .",
    "pack": "electron-builder --dir",
    "start": "electron .",
    "standard": "standard",
    "spectron": "mocha --fgrep '#spectron' 'test/*.js' 'src/app/test/*.js' 'src/lib/test/*.js' 'masters/audio/test/*.js' 'masters/camera/test/*.js' 'masters/editor/test/*.js' 'masters/image/test/*.js' 'masters/markdown/test/*.js' 'masters/person/test/*.js' 'masters/question/test/*.js' 'masters/quote/test/*.js' 'masters/svg/test/*.js' 'masters/website/test/*.js'",
    "unittest": "mocha --fgrep '#unittest' 'test/*.js' 'src/app/test/*.js' 'src/lib/test/*.js' 'masters/audio/test/*.js' 'masters/camera/test/*.js' 'masters/editor/test/*.js' 'masters/image/test/*.js' 'masters/markdown/test/*.js' 'masters/person/test/*.js' 'masters/question/test/*.js' 'masters/quote/test/*.js' 'masters/svg/test/*.js' 'masters/website/test/*.js'",
    "test": "./run-mocha.js"
  },
  "build": {
    "appId": "rocks.friedrich.baldr",
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg"
    },
    "linux": {
      "target": [
        "deb"
      ]
    },
    "fileAssociations": [
      {
        "ext": "baldr",
        "name": "BALDR Presentation Software",
        "description": "File format of the BALDR Presentation Software",
        "icon": "icon.icns",
        "role": "Viewer"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Josef-Friedrich/baldr.git"
  },
  "author": {
    "name": "Josef Friedrich",
    "email": "josef@friedrich.rocks"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Josef-Friedrich/baldr/issues"
  },
  "homepage": "https://github.com/Josef-Friedrich/baldr#readme",
  "devDependencies": {
    "@bldr/core": "^0.0.5",
    "@bldr/electron-app": "^0.0.5",
    "@bldr/foundation-master": "^0.0.5",
    "@bldr/master-audio": "^0.0.5",
    "@bldr/master-camera": "^0.0.5",
    "@bldr/master-editor": "^0.0.5",
    "@bldr/master-image": "^0.0.5",
    "@bldr/master-markdown": "^0.0.5",
    "@bldr/master-person": "^0.0.5",
    "@bldr/master-question": "^0.0.5",
    "@bldr/master-quote": "^0.0.5",
    "@bldr/master-svg": "^0.0.5",
    "@bldr/master-video": "^0.0.5",
    "@bldr/master-website": "^0.0.5",
    "@bldr/songbook-base": "^0.1.0",
    "@bldr/songbook-cli": "^0.1.0",
    "@bldr/songbook-electron-app": "^0.1.0",
    "@bldr/songbook-intermediate-files": "^0.1.0",
    "@bldr/test-helper": "^0.0.5",
    "@bldr/theme-default": "^0.0.5",
    "@bldr/theme-handwriting": "^0.0.5",
    "electron": "^4.0.1",
    "electron-builder": "^20.42.0",
    "electron-packager": "^13.0.1",
    "electron-rebuild": "^1.8.2",
    "glob": "^7.1.3",
    "js-object-pretty-print": "^0.3.0",
    "jsdoc": "^3.6.2",
    "jsdom": "^13.1.0",
    "lerna": "^3.14.1",
    "mocha": "^5.2.0",
    "mocha-standard": "^1.0.0",
    "rewire": "^4.0.1",
    "sinon": "^7.2.2",
    "spectron": "^5.0.0",
    "standard": "^12.0.1",
    "tmp": "0.0.33"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ],
    "ignore": [
      "docs"
    ]
  },
  "gitHead": "1071a4332e0793ccb92d323493a018af9105c758",
  "publishConfig": {
    "access": "public"
  }
}
