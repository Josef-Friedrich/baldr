{
  "name": "baldr",
  "version": "0.0.3",
  "description": "Presentation software",
  "main": "src/main.js",
  "scripts": {
    "build": "electron-builder",
    "doc-show": "xdg-open ./docs/index.html",
    "doc": "jsdoc --configure ./docs/jsdoc-config.json --readme API.md .",
    "pack": "electron-builder --dir",
    "start": "electron .",
    "standard": "standard",
    "spectron": "mocha --fgrep '#spectron' 'test/*.js' 'src/app/test/*.js' 'src/lib/test/*.js' 'masters/audio/test/*.js' 'masters/camera/test/*.js' 'masters/editor/test/*.js' 'masters/image/test/*.js' 'masters/markdown/test/*.js' 'masters/person/test/*.js' 'masters/question/test/*.js' 'masters/quote/test/*.js' 'masters/svg/test/*.js' 'masters/website/test/*.js'",
    "unittest": "mocha --fgrep '#unittest' 'test/*.js' 'src/app/test/*.js' 'src/lib/test/*.js' 'masters/audio/test/*.js' 'masters/camera/test/*.js' 'masters/editor/test/*.js' 'masters/image/test/*.js' 'masters/markdown/test/*.js' 'masters/person/test/*.js' 'masters/question/test/*.js' 'masters/quote/test/*.js' 'masters/svg/test/*.js' 'masters/website/test/*.js'",
    "test": "mocha 'test/*.js' 'test/*.js' 'src/app/test/*.js' 'src/lib/test/*.js' 'masters/audio/test/*.js' 'masters/camera/test/*.js' 'masters/editor/test/*.js' 'masters/image/test/*.js' 'masters/markdown/test/*.js' 'masters/person/test/*.js' 'masters/question/test/*.js' 'masters/quote/test/*.js' 'masters/svg/test/*.js' 'masters/website/test/*.js'"
  },
  "build": {
    "appId": "rocks.friedrich.baldr",
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg"
    },
    "linux": {
      "target": [
        "deb"
      ]
    },
    "fileAssociations": [
      {
        "ext": "baldr",
        "name": "BALDR Presentation Software",
        "description": "File format of the BALDR Presentation Software",
        "icon": "icon.icns",
        "role": "Viewer"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Josef-Friedrich/baldr.git"
  },
  "author": {
    "name": "Josef Friedrich",
    "email": "josef@friedrich.rocks"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Josef-Friedrich/baldr/issues"
  },
  "homepage": "https://github.com/Josef-Friedrich/baldr#readme",
  "devDependencies": {
    "7zip-bin-linux": "^1.1.0",
    "electron": "^4.0.0",
    "electron-builder": "^19.37.2",
    "js-object-pretty-print": "^0.3.0",
    "jsdoc": "^3.5.5",
    "jsdom": "^11.3.0",
    "lerna": "^3.8.0",
    "mocha": "^4.0.1",
    "mocha-standard": "^1.0.0",
    "rewire": "^2.5.2",
    "spectron": "^3.7.2",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "ContentTools": "^1.6.0",
    "baldr-application": "file:./src/app",
    "baldr-library": "file:./src/lib",
    "baldr-master-audio": "file:./masters/audio",
    "baldr-master-camera": "file:./masters/camera",
    "baldr-master-editor": "file:./masters/editor",
    "baldr-master-image": "file:./masters/image",
    "baldr-master-markdown": "file:./masters/markdown",
    "baldr-master-person": "file:./masters/person",
    "baldr-master-question": "file:./masters/question",
    "baldr-master-quote": "file:./masters/quote",
    "baldr-master-svg": "file:./masters/svg",
    "baldr-master-website": "file:./masters/website",
    "baldr-test": "file:./test/helper",
    "baldr-theme-default": "file:./themes/default",
    "baldr-theme-handwriting": "file:./themes/handwriting",
    "font-awesome": "^4.7.0",
    "howler": "^2.0.5",
    "js-yaml": "^3.10.0",
    "marked": "^0.3.6",
    "mousetrap": "^1.6.1",
    "typeface-alegreya": "^0.0.40",
    "typeface-alegreya-sans": "^0.0.40",
    "typeface-alegreya-sans-sc": "^0.0.40",
    "typeface-alegreya-sc": "^0.0.40",
    "typeface-kalam": "^0.0.43",
    "web-audio-engine": "^0.13.3",
    "webdriverio": "^4.13.2"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ],
    "ignore": [
      "docs"
    ]
  }
}
