{
  "name": "baldr-songbook",
  "productName": "baldr-songbook",
  "description": "A fullscreen electron app to display songs in a class room using a projector.",
  "version": "0.0.5",
  "main": "lib/main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:Josef-Friedrich/baldr-songbook.git"
  },
  "scripts": {
    "build": "electron-packager . --out=dist --app-version=$npm_package_version --asar --prune --overwrite --arch=x64 --icon=./icon.icns",
    "doc": "jsdoc --configure jsdoc-config.json --destination ./docs/ lib/",
    "doc-show": "xdg-open ./docs/index.html",
    "electron-rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "start": "electron .",
    "test": "mocha"
  },
  "author": {
    "name": "Josef Friedrich",
    "email": "josef@friedrich.rocks",
    "url": "https://josef.friedrich.rocks"
  },
  "license": "MIT",
  "homepage": "https://github.com/Josef-Friedrich/baldr-songbook",
  "dependencies": {
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "mousetrap": "^1.6.1",
    "selectize": "^0.12.4"
  },
  "devDependencies": {
    "electron-packager": "^9.1.0",
    "electron-rebuild": "^1.6.0",
    "electron": "^1.7.9",
    "jsdoc": "^3.5.5",
    "mocha-jshint": "^2.3.1",
    "mocha": "^4.0.1",
    "spectron": "^3.7.2"
  }
}
