{
    "opts": {
        "encoding": "utf8",
        "destination": "./docs/",
        "recurse": true
    },
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_",
        "exclude": [
            "node_modules"
        ]
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "default": {
          "layoutFile": "./jsdoc-layout.tmpl",
          "includeDate": false
        }
    }
}
